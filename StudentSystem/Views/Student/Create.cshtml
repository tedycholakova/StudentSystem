@model StudentSystem.Models.Student
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<br/><br/>
<form asp-action="Create" method="Post">
    <div class="form-horizontal">
        <div class="row"> 
            <div class="form-group">  
                <label asp-for="FirstName" class="col-lg-2 col-sm-3 control-label"></label>             
                <div class="col-lg-3">  
                    <input asp-for="FirstName" class="form-control" />    
                    <span asp-validation-for="FirstName" class="text-danger"></span>               
                </div>  
            </div> 

            <div class="form-group">  
                <label asp-for="LastName" class="col-lg-2 col-sm-3 control-label"></label>             
                <div class="col-lg-3">  
                    <input asp-for="LastName" class="form-control" />      
                                            
                </div>  
            </div>  
        </div>
    </div>
        
     
    <input type="submit" value="Save" class="col-lg-2 col-md-offset-2 btn btn-success" /> <br/>

</form>